{
  "name": "mantine-datatable",
  "version": "7.0.0-alpha.1",
  "description": "The dependency-free datatable component for Mantine UI, featuring asynchronous data loading support, pagination, multple rows selection, column sorting, custom cell data rendering, row context menu, row expansion and more",
  "keywords": [
    "mantine",
    "data",
    "table",
    "grid",
    "datatable",
    "datagrid",
    "data table",
    "data grid",
    "async",
    "nested",
    "sorting",
    "pagination",
    "context menu",
    "react",
    "component",
    "typescript",
    "ui",
    "user interface",
    "ux",
    "user experience"
  ],
  "repository": "icflorescu/mantine-datatable",
  "homepage": "https://icflorescu.github.io/mantine-datatable/",
  "bugs": {
    "url": "https://github.com/icflorescu/mantine-datatable/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Ionut-Cristian Florescu",
    "email": "ionut.florescu@gmail.com",
    "url": "https://github.com/icflorescu"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/icflorescu"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./styles.css": "./dist/css/styles.css",
    "./styles.layer.css": "./dist/css/styles.layer.css"
  },
  "files": [
    "./dist",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "dev": "next dev",
    "build:package": "rm -rf dist; tsc -p package/tsconfig.esm.json; tsc -p package/tsconfig.cjs.json; postcss package/styles*.css --dir dist/css",
    "build:docs": "next build",
    "build": "yarn build:package && yarn build:docs",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@ducanh2912/next-pwa": "^9.7.2",
    "@mantine/code-highlight": "^7.1.5",
    "@mantine/core": "^7.1.5",
    "@mantine/hooks": "^7.1.5",
    "@mantine/notifications": "^7.1.5",
    "@tabler/icons-react": "^2.39.0",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "eslint": "^8.52.0",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "lodash": "^4.17.21",
    "mantine-contextmenu": "^7.0.0-alpha.6",
    "next": "13.5.6",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-preset-mantine": "^1.9.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.6",
    "swr": "^2.2.4",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0"
  },
  "peerDependencies": {
    "@mantine/core": ">=7",
    "@mantine/hooks": ">=7",
    "clsx": ">=2",
    "mantine-contextmenu": ">=7"
  }
}
